{
    "name": "alahaxe/simple-text-matcher",
    "description": "Simple intent extractor from text",
    "keywords": [
        "chatbot",
        "intent detector",
        "machine learning",
        "ml",
        "classification",
        "ai"
    ],
    "type": "library",
    "require": {
        "php": ">=7.1",
        "ext-json": "^1.7",
        "atomescrochus/laravel-string-similarities": "^2.0",
        "doctrine/collections": "^1.6",
        "doctrine/inflector": "dev-master",
        "psr/log": "^1.1",
        "s9e/regexp-builder": "^1.4",
        "symfony/event-dispatcher": "^5.0",
        "voku/stop-words": "^2.0",
        "whitecube/lingua": "^1.0",
        "yooper/php-text-analysis": "^1.5"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "brianium/paratest": "^4.0",
        "phpmd/phpmd": "@stable",
        "phpmetrics/phpmetrics": "^2.6",
        "phpunit/phpunit": "^9.1",
        "psalm/phar": "^3.11",
        "sebastian/phpcpd": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "test": "./vendor/bin/paratest -p6 tests --runner=WrapperRunner --max-batch-size=30",
        "coverage": "./vendor/bin/paratest -p3 tests --runner=WrapperRunner --coverage-html=coverage --max-batch-size=20",
        "phpmetrics": "./vendor/bin/phpmetrics --report-html=phpmetrics src",
        "phpmd": "./vendor/bin/phpmd src html ruleset.xml --reportfile phpmd.html",
        "phpcpd": "./vendor/bin/phpcpd --fuzzy --progress  src",
        "post-install-cmd": "./vendor/bin/cghooks add --ignore-lock",
        "post-update-cmd": "./vendor/bin/cghooks update",
        "check-style": "./vendor/bin/phpcs --standard=PSR2 tests src",
        "static-analysis": "./vendor/bin/psalm.phar",
        "fix-style": " ./vendor/bin/phpcbf --standard=PSR2 tests src"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer test"
            ],
            "post-merge": "composer install"
        }
    },
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "LAHAXE Arnaud",
            "email": "lahaxe.arnaud@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alahaxe\\SimpleTextMatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alahaxe\\SimpleTextMatcher\\Tests\\": "tests"
        }
    }
}
